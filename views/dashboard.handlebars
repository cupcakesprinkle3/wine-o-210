<main class="">
    <div class="container">
        <div class="d-flex justify-content-around align-items-center p-3">
        <h2 class="text-light">My Dashboard</h2>
        <!-- Button trigger modal -->
        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">+ Add New Wine Post</button>  
        </div>
        <div class="d-flex justify-content-around align-items-center p-3"> 

           {{> modal}}

            <!-- List -->
            <ol class="container animate__animated animate__fadeInUp">
                {{#if wines.length}}
                    {{#each wines as |wine|}}
                        {{> dashboard-cards wine}}
                    {{/each}}
            </ol>
                {{else}}
                    <h6 class="text-center text-light font-italic m-3">You do not currently have any wine posts!</h6>
                {{/if}}
              
        </div>
    </div>
</main>

<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>

</body>
</html>

